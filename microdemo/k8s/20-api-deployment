apiVersion: apps/v1
kind: Deployment
metadata:
  name: api
  namespace: microdemo
spec:
  replicas: 2
  selector:
    matchLabels: { app: api }
  template:
    metadata:
      labels: { app: api }
    spec:
      containers:
        - name: api
          image: emccumbe/microdemo-api:1
          imagePullPolicy: IfNotPresent
          envFrom:
            - configMapRef: { name: app-config }
            - secretRef: { name: api-secret }
          ports:
            - containerPort: 8080
          livenessProbe:
            httpGet: { path: /healthz, port: 8080 }
            initialDelaySeconds: 5
            periodSeconds: 10
          readinessProbe:
            httpGet: { path: /healthz, port: 8080 }
            initialDelaySeconds: 3
            periodSeconds: 5
          resources:
            requests: { cpu: "50m", memory: "64Mi" }
            limits: { cpu: "250m", memory: "256Mi" }